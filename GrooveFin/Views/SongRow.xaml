<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GrooveFin.Views.SongRow"
             Margin="0,0,0,5"
             HorizontalOptions="FillAndExpand"
             BackgroundColor="#1a1a1a">
    <Grid HorizontalOptions="FillAndExpand">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="60" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>
        <Button Text="Play" Grid.Column="0" Clicked="Button_Clicked" />
        <Label x:Name="lblDuration" Grid.Column="1" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" />
        <Label x:Name="lblSongName" Grid.Column="2" Margin="0,0,10,0" VerticalOptions="CenterAndExpand"/>
        <Label x:Name="lblPlayCount" Grid.Column="3" VerticalOptions="CenterAndExpand" Margin="0,0,40,0"/>
    </Grid>
</ContentView>