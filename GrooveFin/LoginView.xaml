<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GrooveFin.LoginView">
    <ContentView.Content>
        <StackLayout>
            <Label Text="Login" />

            <Label Text="ServerAddress" />
            <Entry x:Name="txtServerAddress" Placeholder="http://example.com" />

            <Label Text="Username" />
            <Entry x:Name="txtUsername" />

            <Label Text="Password" />
            <Entry x:Name="txtPassword" IsPassword="True"/>

            <Button x:Name="btnLogin" Clicked="btnLogin_Clicked" Text="Login"/>
        </StackLayout>
    </ContentView.Content>
</ContentView>